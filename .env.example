# =================================
# Supabase Configuration
# =================================
# Your Supabase project URL (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase anon key (required)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Your Supabase service role key (required for server-side operations)
# WARNING: Keep this secret! Never expose to client-side code
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =================================
# Application Configuration
# =================================
# Base URL for your application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Admin authentication key (change this in production!)
ADMIN_KEY=admin123

# Environment setting
NODE_ENV=development

# =================================
# Database Configuration
# =================================
# Direct PostgreSQL connection string (optional, for direct DB access)
DATABASE_URL=postgresql://postgres:password@db.your-project-ref.supabase.co:5432/postgres

# =================================
# Feature Flags
# =================================
# Enable chat analytics tracking
ENABLE_CHAT_ANALYTICS=true

# Enable real-time updates
ENABLE_REALTIME_UPDATES=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# =================================
# Chat System Configuration
# =================================
# Chat session timeout (in milliseconds)
CHAT_SESSION_TIMEOUT=1800000

# Maximum messages per session
MAX_MESSAGES_PER_SESSION=50

# =================================
# External Services (Optional)
# =================================
# Google Gemini API key (if using AI features)
GOOGLE_GEMINI_API_KEY=your-gemini-api-key

# Email service configuration (if using email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =================================
# Production Security (Production Only)
# =================================
# JWT secret for session management
NEXTAUTH_SECRET=your-nextauth-secret-here

# Production domain
NEXTAUTH_URL=https://your-domain.com

# Rate limiting configuration
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WINDOW_MS=60000

# =================================
# Monitoring and Logging (Optional)
# =================================
# Sentry DSN for error tracking
SENTRY_DSN=your-sentry-dsn

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# =================================
# Performance Optimization
# =================================
# Enable request caching
ENABLE_REQUEST_CACHE=true

# Cache TTL in seconds
CACHE_TTL=300

# Enable database connection pooling
ENABLE_CONNECTION_POOLING=true

# Maximum number of database connections
MAX_DB_CONNECTIONS=20